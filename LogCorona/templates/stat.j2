{% extends "base.j2" %}

{% block links %}
    <li><a href="log_corona_main">Add Logs</a></li>
    <li><a href="logout">Logout</a></li>
{%endblock%}

{% block content%}

    <div>
        <form class="log_corona_main" action="#" method="post">
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Comment</th>
                </tr>
            </thead>
            <tbody>
                {% for log_data in logs_data %}
                <tr>
                    <td><input maxlength="50" class="input_table"
                    type="checkbox" name={{log_data.corona_log_id}} value='True'></td>
                    <td><input maxlength="50" class="input_table" type="text"
                    name={{log_data.corona_log_id + '_first_name'}}
                    required="required"
                    title="First name by letters"
                    pattern="[א-תA-Za-z ]{1,50}" value="{{log_data.first_name}}"></td>
                    <td><input maxlength="50" class="input_table" type="text"
                    name={{log_data.corona_log_id + '_last_name'}}
                    title="Last name by letters" pattern="[א-תA-Za-z ]{1,50}" value="{{log_data.last_name}}"></td>
                    <td><input maxlength="50" class="input_table" type="text"
                    name={{log_data.corona_log_id + '_location_name'}}
                    title="Location name by letters" pattern="[א-תA-Za-z0-9 ]{1,50}"
                    value="{{log_data.location_name}}"></td>
                    <td><input maxlength="50" class="input_table" type="text"
                    name={{log_data.corona_log_id + '_date'}}
                    pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" placeholder="2020-12-31"
                    required="required" title="please provide valid date" value="{{log_data.create_date}}"></td>
                    <td><input maxlength="100" class="input_table" type="text"
                    name={{log_data.corona_log_id + '_comment'}} value="{{log_data.comment}}"></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="table_btn">
            <input class="btn" type="submit" name="Update" value="Update">
            <input class="btnDelete" type="submit" name="Delete" value="Delete">            
        </div>
    </form>
    </div>
{%endblock%}
